<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
http://www.liquibase.org/xml/ns/pro
http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">
    <changeSet  id="1"  author="Dizel">
        <createTable  tableName="book">

            <column  name="id"  type="varchar2(255)">
                <constraints  primaryKey="true"  nullable="false"/>
            </column>

            <column  name="title"  type="varchar2(100)">
                <constraints  nullable="false"/>
            </column>

            <column  name="author"  type="varchar2(300)">
                <constraints  nullable="false"/>
            </column>

            <column  name="publishing_house"  type="varchar2(30)">
                <constraints  nullable="false"/>
            </column>

            <column  name="publishing_date"  type="varchar2(100)">
                <constraints  nullable="false"/>
            </column>

            <column  name="image_url"  type="varchar2(300)">
                <constraints  nullable="false"/>
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>